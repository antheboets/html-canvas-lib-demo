pipeline {
    agent {
        docker { 
            image 'anthesdockeravontuur/jenkinsagentimages:node' 
        }
    }
    options {
        skipDefaultC
    }
    
    stages {
        stage('Clean'){
            steps{
                sh 'ls'
                cleanWs()
                sh 'ls'
            }
        }
        stage('SCM'){
            steps{
                checkout()
            } 
        }
        stage('Get packages'){
            steps{
                sh 'npm install'
            } 
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('deploy'){
            steps{
                sh 'npm run deploy'
            }
        }
    }
}
